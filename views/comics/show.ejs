<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= comic.title %></div>
  <div>Author: </div>
  <div><%= comic.author %></div>
  <div>Genre: </div>
  <div><%= comic.genre %></div>

<br><br>
<h2>Reviews</h2>
<form id="add-review-form" method="POST" action="/comics/<%= comic._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (comic.reviews.length) { %>
  <table id='rating'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th>Update Review</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% comic.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <% if (r.readerId.equals(reader._id)) { %>
          <td><form action="/reviews/<%= r._id %>?_method=PUT" method="POST">
            <input type="text" name="ratingComment" value="<%= r.content %>">
            <button type="submit">UPDATE</button>
          </form></td>
          <% } %>
          <% if (r.reader._id.equals(guest)) { %>
          <td><form action="/reviews/<%= r.id %>?_method=DELETE" method="POST" id="delete">
            <button type="submit">X</button>
          </form></td>
          <% } %>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Ratings</h5>
<% } %> 



<%- include('../partials/footer') %>

